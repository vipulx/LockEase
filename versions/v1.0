# ------------------------
# Binary Sensor (Status)
# ------------------------
binary_sensor:
  - platform: status
    name: "Device Status"
    on_state:
      then:
        - light.turn_on:
            id: status_light
            red: 0
            green: 100%
            blue: 0
        - delay: 500ms
        - light.turn_off: status_light

# ------------------------
# Sensors
# ------------------------
sensor:
  - platform: wifi_signal
    name: "WiFi Signal"
    id: wifi_strength
    update_interval: 60s
