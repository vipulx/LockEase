# ----------------------------------------------------
# LockEase v2.0 - Enhanced ESPHome Configuration
# ----------------------------------------------------

# This version of the LockEase project features enhanced security,
# improved user experience, and more robust functionality.
# All sensitive data is now moved to a secrets.yaml file for safety.

esphome:
  name: doordash
  friendly_name: LockEase

esp32:
  board: lolin_s2_mini
  framework:
    type: esp-idf

# Enable logging
logger:

# Enable Home Assistant API
api:
  id: homeassistant_api
  encryption:
    key: !secret lockease_api_key

ota:
  - platform: esphome
    password: !secret lockease_ota_password

wifi:
  ssid: !secret wifi_ssid
  password: !secret wifi_password
  ap:
    ssid: "LockEase v2.0"
    password: !secret lockease_ap_password
captive_portal:

# ------------------------
# Globals (v2.0)
# ------------------------
# All sensitive PINs and tags are now in secrets.yaml
globals:
  - id: disarm_code
    type: std::string
    initial_value: !secret disarm_code
  - id: arm_code
    type: std::string
    initial_value: !secret arm_code
  - id: admin_code
    type: std::string
    initial_value: !secret admin_code
  - id: current_pin
    type: std::string
    initial_value: ""
  - id: current_page
    type: int
    initial_value: '0'   # 0=Home, 1=Info, 2=HA, 3=Coming1, 4=Coming2, 5=AdminMenu
  - id: show_welcome
    type: bool
    initial_value: 'true'
  - id: entering_pin_page
    type: bool
    initial_value: 'false'
  - id: rfid_page
    type: bool
    initial_value: 'false'
  - id: message_text
    type: std::string
    initial_value: ""
  - id: show_message
    type: bool
    initial_value: 'false'
  - id: last_interaction
    type: int
    initial_value: '0'
  - id: display_on
    type: bool
    initial_value: 'true'

  # Admin-related globals
  - id: admin_entry_mode
    type: bool
    initial_value: 'false'
  - id: admin_unlocked
    type: bool
    initial_value: 'false'
  - id: admin_unlocked_until
    type: int
    initial_value: '0'

  # System message TTL (epoch seconds)
  - id: message_ttl
    type: int
    initial_value: '0'

  # Security Globals
  - id: failed_attempts
    type: int
    initial_value: '0'
  - id: lockout_until
    type: int
    initial_value: '0' # Time in seconds until lockout expires

# -------------------
# Outputs
# -------------------
output:
  - platform: gpio
    pin: GPIO15
    id: onboard_led

# -----------------------------
# Time
# -----------------------------
time:
  - platform: homeassistant
    id: home_time

# ------------------------
# Interval Tasks
# ------------------------
interval:
  # Hide welcome screen after 8s
  - interval: 8s
    then:
      - lambda: |-
          id(show_welcome) = false;
          
  # Periodic cleanup and state checks (v2.0 enhancements)
  - interval: 1s
    then:
      - lambda: |-
          // Auto-return pages after inactivity
          if (!id(show_welcome) && (millis() / 1000 - id(last_interaction)) > 10) {
            id(current_page) = 0;
            id(entering_pin_page) = false;
          }

          // Auto-expire admin unlock
          if (id(admin_unlocked) && (int)(millis() / 1000) > id(admin_unlocked_until)) {
            id(admin_unlocked) = false;
            id(message_text) = "Admin Locked";
            id(show_message) = true;
            id(message_ttl) = (int)(millis() / 1000) + 2;
          }

          // Clear temporary messages by TTL
          if (id(show_message) && id(message_ttl) > 0 && (int)(millis() / 1000) > id(message_ttl)) {
            id(show_message) = false;
            id(message_text) = "";
            id(message_ttl) = 0;
          }

          // Check if lockout period has expired
          if (id(lockout_until) > 0 && (int)(millis() / 1000) > id(lockout_until)) {
            id(failed_attempts) = 0;
            id(lockout_until) = 0;
            id(message_text) = "Lockout Expired";
            id(show_message) = true;
            id(message_ttl) = (int)(millis() / 1000) + 2;
          }

# ------------------------
# Lights
# ------------------------
light:
  - platform: esp32_rmt_led_strip
    rgb_order: GRB
    chipset: WS2812
    pin: GPIO16
    num_leds: 3
    name: "Status Light"
    id: status_light
    restore_mode: ALWAYS_OFF

  - platform: binary
    name: "Onboard LED"
    output: onboard_led
    id: Onboard_status_light
    restore_mode: ALWAYS_OFF

# ------------------------
# Text Sensors
# ------------------------
text_sensor:
  - platform: template
    id: alarm_control
    name: "Alarm Control"

  - platform: template
    id: entered_pin
    name: "Entered PIN"

  - platform: template
    id: last_rfid
    name: "Last RFID Tag"

  - platform: homeassistant
    id: alarm_status
    entity_id: alarm_control_panel.alarmo
    internal: true

  - platform: wifi_info
    ip_address:
      name: "LockEase IP"
      id: my_ip

  # HA message from Home Assistant
  - platform: homeassistant
    id: ha_message
    entity_id: input_text.oled_message
    on_value:
      then:
        - script.execute: show_temp_message

# ------------------------
# Scripts
# ------------------------
script:
  - id: show_temp_message
    mode: restart
    then:
      - lambda: |-
          id(message_text) = id(ha_message).state;
          id(show_message) = true;
          id(last_interaction) = millis() / 1000;
          id(message_ttl) = (int)(millis() / 1000) + 5;
      - component.update: oled_display

  # Admin Menu Scripts (v2.0)
  - id: admin_action_1
    then:
      - text_sensor.template.publish:
          id: alarm_control
          state: "Disarmed"
      - lambda: |-
          id(message_text) = "Alarm Disarmed!";
          id(show_message) = true;
          id(message_ttl) = (int)(millis() / 1000) + 2;

  - id: admin_action_2
    then:
      - lambda: |-
          id(display_on) = !id(display_on);
          if (id(display_on)) {
            id(message_text) = "Display ON";
          } else {
            id(message_text) = "Display OFF";
          }
          id(show_message) = true;
          id(message_ttl) = (int)(millis() / 1000) + 2;

  - id: admin_action_3
    then:
      - switch.turn_on: lock_relay
      - delay: 5s
      - switch.turn_off: lock_relay
      - lambda: |-
          id(message_text) = "Lock Toggled";
          id(show_message) = true;
          id(message_ttl) = (int)(millis() / 1000) + 2;

# ------------------------
# RFID RC522
# ------------------------
spi:
  clk_pin: GPIO36
  mosi_pin: GPIO34
  miso_pin: GPIO33

rc522_spi:
  cs_pin: GPIO35
  update_interval: 1s
  id: my_rfid
  on_tag:
    then:
      - lambda: |-
          id(rfid_page) = true;
          id(last_interaction) = millis() / 1000;
          id(last_rfid).publish_state(x);
          
          std::vector<std::string> allowed_tags = {
            !secret rfid_tag_1,
            !secret rfid_tag_2
          };
          
          bool tag_found = false;
          for (const auto& tag : allowed_tags) {
            if (x == tag) {
              tag_found = true;
              break;
            }
          }
          
          if (tag_found) {
            id(alarm_control).publish_state("Disarmed");
            id(message_text) = "Access Granted";
            id(lock_relay).turn_on();
            id(failed_attempts) = 0; // Reset failed attempts on success
          } else {
            id(message_text) = "Access Denied";
            id(failed_attempts)++;
          }
          
          id(show_message) = true;
          id(message_ttl) = (int)(millis() / 1000) + 3;
          
          // Lockout on too many failed attempts
          if (id(failed_attempts) >= 3) {
            id(lockout_until) = (int)(millis() / 1000) + 60; // 60s lockout
            id(message_text) = "Locked out for 60s";
            id(show_message) = true;
            id(message_ttl) = (int)(millis() / 1000) + 60;
            id(rfid_page) = false;
          }

      - delay: 3s
      - switch.turn_off: lock_relay
      - lambda: |-
          id(rfid_page) = false;
          id(show_message) = false;
          id(message_ttl) = 0;

# ------------------------
# Keypad Matrix (4x4)
# ------------------------
matrix_keypad:
  id: my_keypad
  rows:
    - pin: GPIO5
    - pin: GPIO4
    - pin: GPIO3
    - pin: GPIO2
  columns:
    - pin: GPIO8
    - pin: GPIO9
    - pin: GPIO7
    - pin: GPIO6
  keys: "123A456B789C*0#D"
  has_diodes: true
  on_key:
    - lambda: |-
        id(last_interaction) = millis() / 1000;
        
        // Block all interaction if locked out
        if (id(lockout_until) > 0) {
          id(message_text) = "Locked out! Wait...";
          id(show_message) = true;
          id(message_ttl) = (int)(millis() / 1000) + 2;
          return;
        }

        // Handle Admin entry sequence (A -> B within 2 seconds)
        static unsigned long last_special_time = 0;
        static char last_special = 0;
        unsigned long now = millis();

        if (last_special == 'A' && x == 'B' && (now - last_special_time) < 2000) {
          if (id(admin_unlocked)) {
            id(current_page) = 5;
            return;
          }
          id(admin_entry_mode) = true;
          id(message_text) = "Enter Admin PIN";
          id(show_message) = true;
          id(message_ttl) = (int)(millis() / 1000) + 20;
          id(last_interaction) = millis() / 1000;
          id(current_pin) = "";
          return;
        }

        if (x == 'A' || x == 'B') {
          last_special = x;
          last_special_time = now;
        } else {
          last_special = 0;
          last_special_time = 0;
        }

        if (id(show_welcome)) {
          id(show_welcome) = false;
          id(current_page) = 0;
          return;
        }
        
        // Handle numeric key presses (PIN entry)
        if (x >= '0' && x <= '9') {
          id(entering_pin_page) = true;
          id(current_pin) += x;
          return;
        }

        // Handle Admin Menu actions (1, 2, 3)
        if (id(admin_unlocked) && id(current_page) == 5) {
          if (x == '1') {
            script.execute: admin_action_1
          } else if (x == '2') {
            script.execute: admin_action_2
          } else if (x == '3') {
            script.execute: admin_action_3
          }
          return;
        }

        // Handle Navigation (A, B, C, D)
        if (id(admin_unlocked)) {
          if (x == 'A') {
            id(current_page) = (id(current_page) - 1 + 6) % 6;
          } else if (x == 'B') {
            id(current_page) = (id(current_page) + 1) % 6;
          } else if (x == 'C') {
            id(current_page) = (id(current_page) + 1) % 6;
          } else if (x == 'D') {
            id(current_page) = (id(current_page) - 1 + 6) % 6;
          }
        } else { // Block navigation if not admin unlocked
          if (x == 'A' || x == 'B' || x == 'C' || x == 'D') {
            id(message_text) = "Admin Locked";
            id(show_message) = true;
            id(message_ttl) = (int)(millis() / 1000) + 2;
          }
        }

# ------------------------
# Key Collectors
# ------------------------
key_collector:
  - id: pincode_reader
    source_id: my_keypad
    min_length: 4
    max_length: 4
    end_keys: "#"
    clear_keys: "*"
    allowed_keys: "0123456789"
    timeout: 5s
    on_result:
      - lambda: |-
          if (id(admin_entry_mode) || id(lockout_until) > 0) {
            id(current_pin) = "";
            id(entering_pin_page) = false;
            return;
          }
          id(last_interaction) = millis() / 1000;
          id(entered_pin).publish_state(x);
          
          if (x == id(disarm_code)) {
            id(alarm_control).publish_state("Disarmed");
            id(message_text) = "Alarm Disarmed!";
            id(failed_attempts) = 0;
            id(lock_relay).turn_on();
          } else if (x == id(arm_code)) {
            id(alarm_control).publish_state("Armed");
            id(message_text) = "Alarm Armed!";
            id(failed_attempts) = 0;
          } else {
            id(status_light).turn_on();
            id(message_text) = "Wrong PIN";
            id(failed_attempts)++;
          }
          
          id(show_message) = true;
          id(message_ttl) = (int)(millis() / 1000) + 2;

          // Lockout on too many failed attempts
          if (id(failed_attempts) >= 3) {
            id(lockout_until) = (int)(millis() / 1000) + 60; // 60s lockout
            id(message_text) = "Locked out for 60s";
            id(show_message) = true;
            id(message_ttl) = (int)(millis() / 1000) + 60;
          }

          id(current_pin) = "";
          id(entering_pin_page) = false;
      - delay: 2s
      - light.turn_off: status_light
      - delay: 3s
      - switch.turn_off: lock_relay

    on_timeout:
      - lambda: |-
          id(current_pin) = "";
          id(entering_pin_page) = false;

  - id: admin_pincode_reader
    source_id: my_keypad
    min_length: 4
    max_length: 4
    end_keys: "#"
    clear_keys: "*"
    allowed_keys: "0123456789"
    timeout: 20s
    on_result:
      - lambda: |-
          if (!id(admin_entry_mode) || id(lockout_until) > 0) {
            return;
          }
          id(admin_entry_mode) = false;
          id(last_interaction) = millis() / 1000;
          if (x == id(admin_code)) {
            id(admin_unlocked) = true;
            id(admin_unlocked_until) = (int)(millis() / 1000) + 60;
            id(message_text) = "Admin Access Granted";
            id(failed_attempts) = 0;
          } else {
            id(message_text) = "Wrong Admin Code";
            id(failed_attempts)++;
          }
          id(show_message) = true;
          id(message_ttl) = (int)(millis() / 1000) + 2;
          
          if (id(failed_attempts) >= 3) {
            id(lockout_until) = (int)(millis() / 1000) + 60;
            id(message_text) = "Locked out for 60s";
            id(show_message) = true;
            id(message_ttl) = (int)(millis() / 1000) + 60;
          }

    on_timeout:
      - lambda: |-
          id(admin_entry_mode) = false;
          id(message_text) = "Admin Timeout";
          id(show_message) = true;
          id(message_ttl) = (int)(millis() / 1000) + 2;

# ------------------------
# Relay for Lock
# ------------------------
switch:
  - platform: gpio
    pin: GPIO19
    id: lock_relay
    name: "Lock Relay"
    restore_mode: RESTORE_DEFAULT_OFF

  - platform: restart
    name: "EaseLock ESP Restart"

# ------------------------
# OLED Display (SSD1306 0.96")
# ------------------------
i2c:
  sda: GPIO17
  scl: GPIO18
  scan: true

display:
  - platform: ssd1306_i2c
    model: "SSD1306 128x64"
    address: 0x3C
    id: oled_display
    lambda: |-
      if (!id(display_on)) {
        it.fill(COLOR_OFF);
        return;
      }
      
      // Show temporary message if active
      if (id(show_message)) {
        it.fill(COLOR_OFF);
        auto wrap_text = [&](std::string text, int max_chars, int start_y, int line_height) {
          std::string line;
          int y = start_y;
          int count = 0;
          for (char c : text) {
            if ((c == ' ' && count >= max_chars-1) || count >= max_chars) {
              it.printf(64, y, id(fontdsmall), TextAlign::CENTER, "%s", line.c_str());
              line.clear();
              count = 0;
              y += line_height;
              if (y > 64) break;
              continue;
            }
            line.push_back(c);
            count++;
          }
          if (!line.empty() && y <= 64) {
            it.printf(64, y, id(fontdsmall), TextAlign::CENTER, "%s", line.c_str());
          }
        };
        wrap_text(id(message_text), 12, 10, 19);
        return;
      }

      // Handle different display states with a switch statement (v2.0)
      if (id(admin_entry_mode)) {
        it.fill(COLOR_OFF);
        it.printf(64, 10, id(font2), TextAlign::CENTER, "Admin Access");
        it.printf(64, 40, id(fontdMedium), TextAlign::CENTER, "%s", id(current_pin).c_str());
        return;
      }

      if (id(show_welcome)) {
        it.fill(COLOR_OFF);
        it.printf(64, 25, id(font3), TextAlign::CENTER, "LockEase");
        it.printf(64, 50, id(fontdsmall), TextAlign::CENTER, "v2.0");
        return;
      }

      if (id(entering_pin_page)) {
        it.fill(COLOR_OFF);
        it.printf(64, 10, id(font2), TextAlign::CENTER, "Enter PIN");
        it.printf(64, 40, id(fontdMedium), TextAlign::CENTER, "%s", id(current_pin).c_str());
        return;
      }

      if (id(rfid_page)) {
        it.fill(COLOR_OFF);
        it.printf(64, 20, id(font2), TextAlign::CENTER, "Scanning...");
        it.printf(64, 45, id(font1), TextAlign::CENTER, "Place your card");
        return;
      }
      
      // Main page logic
      switch (id(current_page)) {
        case 0: // Home Page
          it.strftime(64, 25, id(fontdMedium), TextAlign::CENTER, "%H:%M", id(home_time).now());
          it.printf(64, 55, id(font2), TextAlign::CENTER, "%s", id(alarm_status).state.c_str());
          break;
        case 1: // Device Info
          it.printf(0, 0, id(font1), "Device Info");
          it.printf(0, 15, id(font1), "WiFi: %s", id(my_ip).state.c_str());
          it.printf(0, 30, id(font1), "Signal: %.0f dBm", id(wifi_strength).state);
          it.printf(0, 45, id(font1), "Lock: %s", id(lock_relay).state ? "Unlocked" : "Locked");
          break;
        case 2: // HA Data
          it.printf(64, 10, id(font2), TextAlign::CENTER, "HA Data");
          it.printf(64, 30, id(font1), TextAlign::CENTER, "Entity 1: ...");
          it.printf(64, 45, id(font1), TextAlign::CENTER, "Entity 2: ...");
          break;
        case 3:
        case 4:
          it.printf(64, 32, id(font2), TextAlign::CENTER, "Coming Soon");
          break;
        case 5: // Admin Menu (v2.0)
          it.fill(COLOR_OFF);
          if (id(admin_unlocked)) {
            it.printf(64, 8, id(font2), TextAlign::CENTER, "Admin Menu");
            it.printf(64, 26, id(font1), TextAlign::CENTER, "1) Disarm Alarm");
            it.printf(64, 42, id(font1), TextAlign::CENTER, "2) Toggle Display");
            it.printf(64, 58, id(font1), TextAlign::CENTER, "3) Toggle Lock");
          } else {
            it.printf(64, 32, id(font2), TextAlign::CENTER, "Admin Locked");
          }
          break;
        default:
          break;
      }

